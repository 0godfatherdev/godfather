{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["node", "mocha", "chai"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "lib": ["ES2022", "DOM"],
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "src/tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
